<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constriant_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/post_shape"
        android:elevation="5dp"
        >

        <TextView
            android:id="@+id/user_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:text="TextView"
            app:layout_constraintBottom_toBottomOf="@id/constriant_layout"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@id/constriant_layout"
            app:layout_constraintTop_toTopOf="@id/constriant_layout"
            app:layout_constraintVertical_bias="0.132" />

        <TextView
            android:id="@+id/title_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:inputType="textMultiLine"
            android:text="TextView"
            app:layout_constraintBottom_toBottomOf="@id/constriant_layout"
            app:layout_constraintEnd_toEndOf="@id/constriant_layout"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@+id/user_id"
            app:layout_constraintTop_toTopOf="@id/constriant_layout"
            app:layout_constraintVertical_bias="0.132" />

        <TextView
            android:id="@+id/body"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="60dp"
            android:text="TextView"
            app:layout_constraintBottom_toBottomOf="@id/constriant_layout"
            app:layout_constraintEnd_toEndOf="@id/constriant_layout"
            app:layout_constraintHorizontal_bias="0.439"
            app:layout_constraintStart_toStartOf="@id/constriant_layout"
            app:layout_constraintTop_toTopOf="@id/constriant_layout"
            app:layout_constraintVertical_bias="0.127" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>